<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
   <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="fill_parent"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true" >

         <com.androstarkdevelopers.member.droidbusterxda.fab1
             android:id="@+id/fab_submenu1"
             android:layout_width="62dp"
             android:layout_height="62dp"
             android:layout_above="@+id/fab_submenu2"
             android:layout_alignLeft="@+id/fab_submenu2"
             android:background="@drawable/share_fab"
             android:src="@drawable/ic_share" />

         <com.androstarkdevelopers.member.droidbusterxda.fabmain
             android:id="@+id/Fab_main"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_marginBottom="31dp"
             android:background="@drawable/fab_shape"
             android:src="@drawable/ic_mode_edit" />

         <com.androstarkdevelopers.member.droidbusterxda.maintitlebtn
             android:id="@+id/button1"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_alignBottom="@+id/Fab_main"
             android:layout_marginBottom="12dp"
             android:layout_toLeftOf="@+id/Fab_main"
          android:background="@drawable/titlebg"
             android:gravity="center"
             android:text="Compose" />

    <com.androstarkdevelopers.member.droidbusterxda.fab2
             android:id="@+id/fab_submenu2"
             android:layout_width="62dp"
             android:layout_height="62dp"
             android:layout_above="@+id/Fab_main"
             android:layout_alignLeft="@+id/Fab_main"
             android:background="@drawable/invite_hackter"
             android:src="@drawable/ic_insert_emoticon" />

         <com.androstarkdevelopers.member.droidbusterxda.fabtitlebtn
             android:id="@+id/button2"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_alignBottom="@+id/fab_submenu2"
             android:layout_alignLeft="@+id/button1"
         android:background="@drawable/titlebg"
             android:text="Invite Hackter" />

         <com.androstarkdevelopers.member.droidbusterxda.fabtitlebtn
             android:id="@+id/button3"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_alignBottom="@+id/fab_submenu1"
             android:layout_toLeftOf="@+id/fab_submenu1"
             android:background="@drawable/titlebg"
             android:text="Share result" />

        

     </RelativeLayout>

</RelativeLayout>
